extends layout.pug

block content

  article.portfolio-intro
    h1 My projects portfolio    
    p This page shows the projects I have completed during my Full Stack courses. 

  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in data
        .cell
          a(href=`/project/${project.id}` class=`project-${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0].square}`, alt='Project preview picture as square icon' class=`project-${project.id}-square`)
            h5= project.project_name

